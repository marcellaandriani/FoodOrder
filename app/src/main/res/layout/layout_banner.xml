<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardCornerRadius="14dp"
    android:layout_margin="14dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_banner_silver" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_black_gradient_banner" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_menu_banner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/text_menu"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/font_lato_bold"
                app:layout_constraintEnd_toStartOf="@id/iv_food_banner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_discount_banner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/text_discount_desc"
                android:textSize="14sp"
                android:fontFamily="@font/font_lato_regular"
                app:layout_constraintEnd_toStartOf="@+id/iv_food_banner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_menu_banner"
                app:layout_constraintBottom_toTopOf="@id/btn_order_now" />

            <ImageView
                android:id="@+id/iv_food_banner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_banner_food"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="18dp" />

            <Button
                android:id="@+id/btn_order_now"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:text="@string/text_button_banner"
                android:fontFamily="@font/font_lato_semibold"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_discount_banner"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
