<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_list_menu_image1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintDimensionRatio="4:4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/img_salad" />

        <TextView
            android:id="@+id/tv_list_menu_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:fontFamily="@font/font_lato_semibold"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_list_menu_image1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SALAD" />

        <TextView
            android:id="@+id/tv_list_menu_price1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:fontFamily="@font/font_lato_semibold"
            android:maxLines="1"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_list_menu_image1"
            app:layout_constraintTop_toBottomOf="@id/tv_list_menu_name1"
            tools:text="Rp. 25.000" />

    </androidx.constraintlayout.widget.ConstraintLayout>
